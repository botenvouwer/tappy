{
    "name": "Tappy",
    "version": "1.0",
    "description": "Closes your tabs for you",
    "browser_action":{
	    "default_icon":{
	    	"32":"tappy.png"
	    },
	    "default_title":"Tappy",
	    "default_popup":"popup.html"
    },
    "background": {
      "scripts": [
        "event.js",
        "runner.js",
        "dom/TabDao.js",
        "dom/TimeTab.js",
        "dom/TimeTabDao.js"
      ],
      "persistent": false
    },
    "permissions": [
      "tabs", "idle"
    ],
    "manifest_version": 2
  }
